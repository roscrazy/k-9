<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DavDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/appThemeColorBlueAlpha88</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="DavView"></style>

    <style name="DavView.CtaButton" parent="DavView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/default_padding_large</item>
        <item name="android:paddingBottom">@dimen/default_padding_large</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_cta_button</item>
        <item name="android:src">@drawable/ic_arrow_cta</item>
    </style>

    <style name="DavView.PositiveButton" parent="DavView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_padding_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_right_button</item>
        <item name="android:textColor">@color/appTextColorInverse</item>
    </style>

    <style name="DavView.NegativeButton" parent="DavView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_padding_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_left_button</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>